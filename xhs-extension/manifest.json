{
  "manifest_version": 3,
  "name": "小红书审核助手",
  "version": "10.8.0",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://www.xiaohongshu.com/*",
    "http://localhost:5001/*",
    "https://localhost:5001/*",
    "http://127.0.0.1:5001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.xiaohongshu.com/*"
      ],
      
      "js": [
        "content_ai.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
